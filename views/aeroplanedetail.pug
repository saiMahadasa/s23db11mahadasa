extends layout

block content
    head
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    h1= title
    - let aeroplaneid = toShow._id
    - let aeroplane_type = toShow.aeroplane_type
    - let aeroplanecolor = toShow.color
    - let number_of_wings = toShow.number_of_wings

    div.container.mt-5
        div.row.mb-3
            div.col-12
                
        div.row
            div.col-4.text-info
                strong.text-dark Aeroplane ID:
            div.col-8.text-dark
                span.text-success #{aeroplaneid}
        div.row
            div.col-4.text-info
                strong.text-dark Aeroplane Type:
            div.col-8.text-dark
                span.text-success #{aeroplane_type}
        div.row
            div.col-4.text-info
                strong.text-dark Aeroplane Color:
            div.col-8.text-dark
                span.text-success #{aeroplanecolor}
        div.row
            div.col-4.text-info
                strong.text-dark Number of Wings:
            div.col-8.text-dark
                span.text-success #{number_of_wings}
