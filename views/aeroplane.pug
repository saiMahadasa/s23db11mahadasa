extends layout

block content
  h1= title
  - let items = results;
  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        - let destination = `/aeroplane/update?id=${item._id}`
        div(class="row-sm-2", class="m-1")
          | Aeroplane :  #{item.aeroplane_type}(#{item.color})  #{item.no_of_wings}
          button.btn.btn-primary.ml-1(onclick=`dispatch('${destination}')`) Update

  script.
    function dispatch(path) {
      window.location.href = path;
    }
